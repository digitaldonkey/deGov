{% if items %}
  {% for tweet in items %}
    {% set parity = cycle(['odd', 'even'], loop.index0) %}
    <div class="tweet col-md-12 col-xl-6 p-3 {{ parity }}">
      <div class="tweet__avatar">
        <a href="https://twitter.com/{{ tweet.screen_name }}"
           alt="{{ tweet.screen_name }}" title="{{ tweet.screen_name }}">
          <img src="{{ tweet.avatar }}">
        </a>
      </div>
      <div class="tweet__content">
        <div class="tweet__name">
          <a
            href="https://twitter.com/{{ tweet.screen_name }}">{{ tweet.username }}</a>
        </div>
        <div class="tweet__handle">
          <a
            href="https://twitter.com/{{ tweet.screen_name }}">@{{ tweet.screen_name }}</a>
        </div>
        <div class="tweet__timestamp">
          <a
            href="https://twitter.com/{{ tweet.screen_name }}/status/{{ tweet.id }}"
            alt="{{ tweet.screen_name }}" title="{{ tweet.screen_name }}">
            {% trans %}<em class="placeholder">{{ tweet.time_ago }}
              ago</em>{% endtrans %}
          </a>
        </div>
        <div class="tweet__text">
          {{ tweet.text }}
        </div>
      </div>

      <ul class="tweet__actions list-inline">
        <li class="list-inline-item"><a
            href="https://twitter.com/intent/tweet?in_reply_to={{ tweet.id }}">{{ 'Reply'|t }}</a>
        </li>
        <li class="list-inline-item"><a
            href="https://twitter.com/intent/retweet?tweet_id={{ tweet.id }}">{{ 'Retweet'|t }}</a>
        </li>
        <li class="list-inline-item"><a
            href="https://twitter.com/intent/favorite?tweet_id={{ tweet.id }}">{{ 'Favorite'|t }}</a>
        </li>
      </ul>
    </div>
  {% endfor %}
{% endif %}
