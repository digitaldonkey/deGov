function degov_common_requirements($phase) {
  $requirements = [];
  if ($phase === 'runtime') {

    $requirements['degov_common'] = [
      'severity' => REQUIREMENT_OK,
      'title' => t('deGov version'),
      'description' => t('Version of deGov'),
      'value' => t('Version: @version', ['@version' => system_get_info('module', 'degov')['version']]),
    ];

    foreach (degov_common_check_integrity() as $index => $module) {
      foreach ($module as $key => $messages) {
        $requirements['degov_integrity_' . $key] = [
          'severity' => REQUIREMENT_WARNING,
          'title' => t('deGov integrity - @module', ['@module' => $key]),
          'description' => degov_common_build_message($messages),
          'value' => t('Configuration is missing'),
        ];
      }
    }
  }
  return $requirements;
}

function degov_common_build_message($messages) {
  $messageString = '';
  foreach ($messages as $message) {
    $messageString .= $message . ' ';
  }
  return $messageString;
}

function degov_common_check_integrity() {
  $messages = [];
  $deGovIntegrity = \Drupal::service('degov_common.module_integrity');
  /**
   * @var $moduleHandler \Drupal\Core\Extension\ModuleHandler
   */
  $moduleHandler = \Drupal::service('module_handler');
  $modules = $moduleHandler->getModuleList();

  foreach ($modules as $module) {
    $messages[] = $deGovIntegrity->checkModule($module->getName());
  }

  return $messages;
}
