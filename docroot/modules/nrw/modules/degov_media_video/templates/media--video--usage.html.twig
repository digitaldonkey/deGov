{#
/**
 * @file
 * Default theme implementation to present a media entity.
 *
 * Available variables:
 * - name: Name of the media.
 * - content: Media content.
 *
 * @see template_preprocess_media()
 *
 * @ingroup themeable
 */
#}
{%
set media_classes = [
    'video',
    'clearfix',
]
%}
<article{{ attributes.addClass(media_classes) }}>
  {{ content.contextual_links }}
  <div class="video__type-text">{{ 'Video'|t }}</div>
  <div class="video__video"{{ content.field_media_video_embed_field|quickedit_attr }}>{{ content.field_media_video_embed_field|field_value }}</div>
  {% if content.field_video_caption|field_value or content.field_video_copyright|field_value %}
  <div class="video__info">
    {% if content.field_video_caption|field_value %}
      <div class="video__caption"{{ content.field_video_caption|quickedit_attr }}>{{ content.field_video_caption|field_value }}</div>
    {% endif %}
    {% if content.field_video_copyright|field_value %}
      <div class="video__copyright">
        <span class="video__copyright-label"{{ content.field_video_copyright|quickedit_attr }}>{{ '&copy;'|trans }}</span>
        {{ content.field_video_copyright|field_value }}
      </div>
    {% endif %}
  </div>
  {% endif %}
  {% if content.field_tags|field_value %}
    <div class="tags"{{ content.field_tags|quickedit_attr }}>{{ content.field_tags|field_value }}</div>
  {% endif %}
  {% if content.usage %}
    <div class="video__usage">
      <h2>{{ 'Usage'|trans }}</h2>
      {{  content.usage }}
    </div>
  {% endif %}
</article>
